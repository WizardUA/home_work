<!DOCTYPE html>
<html>
<head>
  <title>MyStore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="sessionInfo">
    <% if user_signed_in? %>
      <span><%= link_to current_user.login, profile_person_path(current_user) %></span>
      <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
    <% else %>
      <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
    <% end %>
  </div>

  <div><h2>MY STORE</h2></div>

  <%if user_signed_in?%>
    <% if current_user.admin %>
      <div><h3>Administrator</h3></div>
    <% end %>
  <%end%>  

  <div><%= link_to "ITEMS", items_path %></div>

  <% if user_signed_in? %>
    <div><%= link_to "YOUR CART", show_cart_items_path %></div>
  <% end %>

  <p style="color: red"><%= flash[:error]  %></p>
  <p style="color: green"><%= flash[:success]  %></p>
<%= yield %>

</body>
</html>
